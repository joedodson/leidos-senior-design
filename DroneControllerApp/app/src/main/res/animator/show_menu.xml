<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="alpha"
        android:duration="@integer/animation_duration_ms_short"
        android:valueFrom="0"
        android:valueTo="1"
        android:valueType="floatType" />

    <objectAnimator
        android:propertyName="translationX"
        android:duration="@integer/animation_duration_ms_short"
        android:valueFrom="@dimen/menu_width"
        android:valueTo="0"
        android:valueType="floatType" />
</set>