<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".compass.CompassCalibrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/activity_compass_guide_title"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_compass_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/drone_compass_default_subtitle"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Current Status: "
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_compass_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_rounded_status"
            android:text=" Test Status "
            android:textAlignment="center"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <!--<android.support.v4.view.ViewPager-->
    <com.leidossd.dronecontrollerapp.compass.CustomViewPager
        android:id="@+id/view_pager_compass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100" />
</LinearLayout>