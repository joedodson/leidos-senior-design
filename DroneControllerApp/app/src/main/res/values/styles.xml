<resources>

    <!-- A theme to override the default theme Android uses during start up -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorAccent">@color/accent_normal</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_normal</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:colorForeground">@color/text_light</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="actionBarStyle">@style/CustomWidget.StatusActionBar</item>
        <item name="buttonStyle">@style/CustomWidget.Button.Standard</item>

        <!-- Pop-up Menu -->
        <item name="popupMenuStyle">@style/CustomWidget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/CustomWidget.PopupMenuTextLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/CustomWidget.PopupMenuTextSmall</item>
    </style>

    <!-- Widgets -->
    <style name="CustomWidget" />

    <style name="CustomWidget.StatusActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="CustomWidget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="CustomWidget.PopupMenuTextLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CustomWidget.PopupMenuTextSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Button -->
    <style name="CustomWidget.Button">
        <item name="android:paddingTop">@dimen/button_std_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_std_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/button_std_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_std_padding_left_right</item>
        <item name="android:maxWidth">@dimen/button_std_width</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomWidget.Button.Standard">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@drawable/btn_standard</item>
    </style>

    <style name="CustomWidget.Button.Menu">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@drawable/btn_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_menu_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomWidget.Button.Icon">
        <item name="android:padding">0sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_width</item>
        <item name="android:background">@color/accent_light</item>
    </style>
</resources>